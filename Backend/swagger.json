{
  "swagger": "2.0",
  "info": {
    "description": "ITRIX 2022",
    "version": "1.0.0",
    "title": "ITRIX 2022"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "paths": {
    "/user/signup": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "User Signup",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User signup",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserSignup"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Account created!"
          },
          "400": {
            "description": "User already exists"
          },
          "500": {
            "description": "Server Error"
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "User Login",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User Login",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserLogin"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Logged in!"
          },
          "400": {
            "description": "Invalid credentials"
          },
          "403": {
            "description": "No such user found!"
          },
          "500": {
            "description": "Server Error"
          }
        }
      }
    },
    "/user/verify": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "OTP for Account Verification",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "OTP for Account Verification",
            "required": true,
            "schema": {
              "$ref": "#/definitions/VerifyOTP"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Account verified!"
          },
          "400": {
            "description": "Incorrect OTP!"
          },
          "500": {
            "description": "Server Error"
          }
        }
      }
    },
    "/event/": {
      "get": {
        "tags": [
          "Events"
        ],
        "summary": "Get all Enrolled Events",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "List of all Enrolled Events"
          },
          "500": {
            "description": "Server Error"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/event/enroll/{eventId}": {
      "get": {
        "tags": [
          "Events"
        ],
        "summary": "Enroll in a particular event",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "eventId",
            "description": "ID of the Event",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "List of Events"
          },
          "500": {
            "description": "Server Error"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/admin/create-event": {
      "post": {
        "tags": [
          "Admin"
        ],
        "summary": "Create a new Event",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Create a new Event",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CreateEvent"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Event created!"
          },
          "500": {
            "description": "Server Error"
          }
        }
      }
    },
    "/admin/event-info": {
      "post": {
        "tags": [
          "Admin"
        ],
        "summary": "Get detailed event information (includes registered users)",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Get Event info",
            "required": true,
            "schema": {
              "$ref": "#/definitions/EventInfo"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Event info!"
          },
          "500": {
            "description": "Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "UserSignup": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "UserLogin": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "VerifyOTP": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "otp": {
          "type": "string"
        }
      }
    },
    "CreateEvent": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "eventId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "date": {
          "type": "string"
        },
        "time": {
          "type": "string"
        }
      }
    },
    "EventInfo": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "eventId": {
          "type": "string"
        }
      }
    }
  },
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "description": "Enter JWT Token",
      "name": "Authorization",
      "in": "header"
    }
  }
}